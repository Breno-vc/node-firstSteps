extends ../layouts/main-layout.pug

block content 
    main 
        if products.length
            .grid 
                each product in products
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            .card__image
                                img(src=product.imgUrl, alt="Book")
                            .card__content
                                h2.product__price #{product.price}
                                p.product__description #{product.description}
                            form(action="/add-to-cart" method="POST").card__actions
                                a(href="/products/" + product.productId ).btn Details
                                button(type="submit").btn Add to cart
        else   
                h1 No Products yet.